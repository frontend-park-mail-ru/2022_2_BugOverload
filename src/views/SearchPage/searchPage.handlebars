<div class="search-page js-search-page">
    {{#if isMobile}}
    <form class="search-page__search">

        <input class="js-search-page__input" maxlength="100" data-search-input type="text"
            placeholder="фильмы, передачи, персоны.." aria-label="Search">
        <img class="search-page__search__icon-search">

    </form>
    {{/if}}
    <div class="search-page__title">
        Результаты поиска
    </div>
    <div class="search-page__content-container js-search-page__content-container">
        <div class="search-page__block js-search-page__films">
        </div>

        <div class="search-page__block js-search-page__serials">
        </div>

        <div class="search-page__block js-search-page__persons">
        </div>
    </div>
</div>