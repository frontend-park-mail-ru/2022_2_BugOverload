<div class="preview-film js-preview-film" >
    <div class="preview-film__container">

        <div class="preview-film__film-data">
            <div class="preview-film__film-title">{{name}}</div>
            <img class="preview-film__film-decore-line" src="/shtrih.png">
            <div class="preview-film__film-description">{{short_description}}</div>
            <a {{#if id}}data-section="/film/{{id}}/"{{/if}} class="preview-film__button primary-btn-big">Перейти</a>
        </div>
        <div class="preview-film__blackout-bottom"></div>

    </div>
</div>
