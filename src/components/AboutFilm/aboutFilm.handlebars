<div class="about-film" style="background-image: url('{{poster_hor}}');">
    <div class="about-film__blackout-left"></div>
    <div class="about-film__container">

        <div class="about-film__title">{{film_name}}</div>
        <div class="about-film__original-title">{{original_name}}</div>
        <div class="about-film__base-info">
            <div class="about-film__rating">{{rating}}</div>
            <div class="about-film__year">{{year_prod}}</div>
            <div class="about-film__duration">{{duration}}</div>
            {{#if type_serial}}
            <div class="about-film__count-seasons">{{count_seasons}}</div>
            {{/if}}
            <div class="about-film__age-limit">{{age_limit}}+</div>
        </div>
        <div class="about-film__short-description">{{short_description}}</div>
        <div class="about-film__directors">
            <div class="about-film__label-director">Режиссёр:</div>

            {{#each directors}}
            <a href="/" class="about-film__director">{{this}}&nbsp</a>
            {{/each}}
        </div>
        <div class="about-film__roles">
            <div class="about-film__label-role">В ролях:</div>

            {{#each roles}}
            <a href="/" class="about-film__role">{{this}}&nbsp</a>
            {{/each}}
        </div>
        <div class="about-film__buttons-container">
            <a href="/" class="js-btn-watch-trailer">
                <div class="about-film__button-trailer primary-btn-big">
                    <img class="about-film__button_play-trailer" src="play.png" alt="">
                    Трейлер
                </div>
            </a>
            <a href="/" class="js-btn-save-to-bookmark">
                <div class="about-film__button-bookmark secondary-btn-big">
                    <img class="about-film__button_bookmark" src="bookmark.png" alt="">
                </div>
            </a>
            <div class="about-film__save-to-collection js-place-save-to-collection">
                <a href="/" class="js-btn-save-to-coll">
                    <div class="about-film__button-plus secondary-btn-big" data-section="plus-save">
                        <img class="about-film__button_plus" src="plus-save.png" alt="">
                    </div>
                </a>
            </div>

        </div>
    </div>
    <div class="about-film__blackout-bottom"></div>
</div>
